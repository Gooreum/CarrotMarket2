<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_chat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"

        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImg"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_marginRight="10dp"
            android:src="@drawable/ic_person_outline_black_24dp"
            app:civ_border_color="@color/viewBigBorder"
            app:civ_border_width="1dp"
            app:civ_circle_background_color="@color/viewBigBorder" />

        <TextView
            android:id="@+id/txt_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profileImg"
            android:layout_alignTop="@+id/profileImg"
            android:layout_marginRight="7dp"
            android:layout_toRightOf="@+id/profileImg"
            android:gravity="center"

            android:text="갤럭시"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profileImg"
            android:layout_alignTop="@+id/profileImg"
            android:layout_toRightOf="@+id/txt_nick"
            android:gravity="center"
            android:text="서초구 서초3동"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/txt_hoogi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/profileImg"
            android:layout_below="@+id/profileImg"
            android:layout_marginTop="10dp"
            android:text="비움을 실천하고 계신 밍구르님, 정말 멋져요!"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/txt_hoogi"
            android:layout_marginTop="5dp"
            android:text="5월6일"
            android:textSize="14dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray" />
</RelativeLayout>