<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:padding="10dp">


    <RelativeLayout
        android:id="@+id/relative_chat_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="visible">


        <TextView

            android:id="@+id/txt_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_date"
            android:background="@drawable/chat_me"
            android:padding="10dp"
            android:text="헬로"
            android:textColor="#ffffff" />


        <TextView

            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_me"
            android:layout_marginRight="5dp"
            android:text="오전 2:00" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_chat_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="visible">


        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="me" />


        <TextView
            android:id="@+id/txt_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user"
            android:background="@drawable/chat_you"
            android:padding="10dp"
            android:text="헬로"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/txt_date_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_you"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_you"
            android:text="오전 2:00" />


    </RelativeLayout>
</RelativeLayout>