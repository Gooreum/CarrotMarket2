<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">
    >

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="동네인증 없음"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="글쓰기/관심/댓글쓰기를 하려면"
                android:textColor="#000000"
                android:textSize="18dp"

                />

            <TextView
                android:id="@+id/dong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt2"
                android:layout_centerHorizontal="true"
                android:text="장지동"
                android:textColor="@color/colorOrange"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dong"
                android:layout_centerHorizontal="true"
                android:text="동네인증이 필요해요."
                android:textColor="#000000"

                android:textSize="18dp" />

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignEnd="@+id/txt2"
                android:layout_alignStart="@+id/txt2"
                android:layout_below="@+id/txt3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@android:color/darker_gray" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_auth"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:padding="2dp"
                app:cardBackgroundColor="@color/colorOrange"
                app:cardCornerRadius="3dp">

                <TextView
                    android:id="@+id/txt_auth"
                    android:layout_width="148dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ripple_effect_orange_to_red"
                    android:gravity="center"
                    android:text="동네인증 하기!"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_auth"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ripple_effect"
                android:text="닫기"
                android:textSize="20dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>